.display{
  height: 90rpx;
  overflow: hidden;
}
.display1{
  height: auto;
  overflow: none;
}
.van-picker__cancel,.van-picker__confirm{
  color: #FF4444!important;
}
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo{
  height:300rpx;
  width: 100%;
  background: #fff;
  text-align: center;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction:column;
  align-items: center;
  transition: all 300ms ease;
}
.userinfo-avatar {
  width:150rpx;
  height:150rpx;
  border-radius: 50%;
  margin-top: 50rpx;
  background-size: cover;
  background-color: white;
}
.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
}

.userinfo-nickname::after {
  border: none;
}

.music-logo{
  text-align: center;
}
